<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyCalculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/yellow</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="Theme.MyCalculator" parent="Base.Theme.MyCalculator" />

    <!--item history-->
    <style name="cardViewHistory" parent="CardView">
        <item name="cardBackgroundColor">@color/whiteSmoke</item>
    </style>


    <!--Recycler-->
    <style name="RecyclerView1"  >
        <item name="android:background">@color/white</item>
    </style>


<!--TextView Result-->
    <style name="ResultStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/_22font_mdp</item>
        <item name="android:textColor">@color/gray_shade_1</item>
        <item name="android:padding">@dimen/_15mdp</item>
        <item name="android:background">@color/whiteSmoke</item>
    </style>


    <!--TextView Calculation-->
    <style name="CalculationStyle" parent="Widget.AppCompat.TextView">
        <item name="android:padding">@dimen/_15mdp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/_18font_mdp</item>
        <item name="android:textColor">@color/black_shade_1</item>
        <item name="android:background">@color/whiteSmoke</item>

    </style>

    <!--Buttons-->
    <style name="DigitButton">
        <item name="android:layout_height">@dimen/_50mdp</item>
        <item name="android:layout_width">@dimen/_50mdp</item>
        <item name="android:layout_margin">@dimen/_1mdp</item>
        <item name="android:padding">@dimen/_5mdp</item>
        <item name="android:textColor">@color/black_shade_1</item>
        <item name="android:textSize">@dimen/_18font_mdp</item>
       <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:inset">0dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>


    <!--Operator Buttons-->
    <style name="OperatorButton">
        <item name="android:layout_height">@dimen/_50mdp</item>
        <item name="android:layout_width">@dimen/_50mdp</item>
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:padding">@dimen/_5mdp</item>
        <item name="android:layout_margin">@dimen/_1mdp</item>
        <item name="android:textSize">@dimen/_18font_mdp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:inset">0dp</item>
    </style>


    <!--Icon Image-->
    <style name="IconImage">
        <item name="android:layout_width">@dimen/_20mdp</item>
        <item name="android:layout_height">@dimen/_20mdp</item>
        <item name="android:layout_margin">@dimen/_15mdp</item>
        <item name="android:layout_marginBottom">@dimen/_10mdp</item>
        <item name="tint">@color/yellow</item>
    </style>

    <!--Cons Color-->
    <style name="ConstraintBg">
        <item name="android:background">@drawable/table_top_rounded</item>
    </style>

    <!--Cons Color-->
    <style name="ConstraintIconsBg">
        <item name="android:background">@color/whiteSmoke</item>
    </style>


    <!--landscape styles-->

    <!--Buttons-->
    <style name="SmallDigitButton">
        <item name="android:layout_height">@dimen/_35mdp</item>
        <item name="android:layout_width">@dimen/_80mdp</item>
        <item name="android:textColor">@color/black_shade_1</item>
        <item name="android:textSize">@dimen/_11font_mdp</item>
        <item name="android:clickable">true</item>
        <item name="android:inset">0dp</item>
        <item name="android:layout_margin">@dimen/_1mdp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>

    </style>

    <!--Operator Buttons-->
    <style name="SmallOperatorButton">
        <item name="android:layout_height">@dimen/_35mdp</item>
        <item name="android:layout_width">@dimen/_80mdp</item>
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:textSize">@dimen/_11font_mdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:inset">0dp</item>
        <item name="android:layout_margin">@dimen/_1mdp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>


    <!--TextView Result-->
    <style name="LandResultStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/_15font_mdp</item>
        <item name="android:textColor">@color/gray_shade_1</item>
        <item name="android:padding">@dimen/_20mdp</item>
        <item name="android:background">@color/whiteSmoke</item>
    </style>

    <!--TextView Calculation-->
    <style name="LandCalculationStyle" parent="Widget.AppCompat.TextView">
        <item name="android:padding">@dimen/_14mdp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/_16font_mdp</item>
        <item name="android:textColor">@color/black_shade_1</item>
        <item name="android:background">@color/whiteSmoke</item>

    </style>



</resources>